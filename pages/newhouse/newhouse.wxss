.lunbo{
	width: 100%;
	height: 500rpx;
}
swiper{
	width: 100%;
	height: 100%;
}
.lunbo swiper-item .slide-image{
	width: 100%;
	height: 100%;
}
.ptactive{
	font-size: 30rpx !important;
	color: #000000 !important;
}
.shop2-title{
	text-align: center;
} 
.shop2-title .st2-h3{
	font-size: 32rpx;
    font-weight: bold;
    color: #000;
    text-align: center;
    padding-top: 20rpx;
    line-height: 72rpx;
	
}
.shop2-title .st2-h4{
	font-size: 34rpx;
	color: #E32F2F;
	text-align: center;
	line-height: 40rpx;
  font-weight: 700;
  padding-bottom: 30rpx;
}
.st2-h4-active{
  color: #00B26A !important;
}
.title-zj{
	padding: 40rpx 0;
	display: flex;
	height: 100rpx;
}
.title-zj .shop2-t1{
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
}
.shop2-t1>.shop2-p{
	font-size: 28rpx;
	color: #999;
}
.shop2-t1>.shop2-h4{
	font-size: 26rpx;
	color: #f00;
}
.shop2-t1>.shop2-h4>text{
	font-size: 34rpx;
	font-weight: bold;
	color: #f00;
}

/* 第二块 */
.h2-text{
  display: flex;
  font-size: 30rpx;
  padding: 20rpx 0;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}
.h2-text>text:first-child{
  color: #999;
  width: 150rpx;
}
.h2-text>text:last-child{
  color: #333;
  width: 560rpx;
}
/* 第三块 */
.house3{
  overflow: hidden;
}
