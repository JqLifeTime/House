.contact{
	width: 100%;
	height: 90rpx;
	display: flex;
	align-items: center;
	position: fixed;
	left: 0rpx;
	bottom: 0rpx;
	border-top: 1rpx solid #f1f1f1;
}
.contact .c-phone{
	width: 65%;
	text-align: center;
	height: 100%;
	line-height: 90rpx;
	color: #333333;
	font-size: 28rpx;
	font-weight: bold;
	background: #FFFFFF;
}
.contact .c-name{
	width: 35%;
	height: 100%;
	line-height: 90rpx;
	background: #E32F2F;
	text-align: center;
}
.contact>.c-name>view{
	font-size: 24rpx;
	color: #FFFFFF;
}
.contact .c-name view image{
	width: 30rpx;
	height: 30rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}

