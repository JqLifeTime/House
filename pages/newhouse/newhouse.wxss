  font-size: 34rpx;
  font-weight: 700;
  padding: 25rpx 0;
}
.h5-btm{
  padding-bottom: 20rpx;
}
.h5-btm scroll-view{
  white-space: nowrap;
}

.h5-btm1{
  display: inline-block;
  width: 260rpx;
  margin-right: 30rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  overflow: hidden;
}
.h5-btm1 image{
  width: 100%;
  height: 160rpx;
}
.h5-b-t1{
  font-size: 32rpx;
  font-weight: 700;
  padding: 10rpx;
}
.h5-b-t2{
  font-size: 28rpx;
  color: #999;
  display: flex;
  padding: 0 10rpx 10rpx 10rpx;
  justify-content: space-between;
}

