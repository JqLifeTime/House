/* pages/zdxz/zdxz.wxss */
.shop-tab{
	display: flex;
}
.tab1{
	flex: 1;
	text-align: center;
	display: flex;
	justify-content: center;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	color: #666;
	border-top: 1rpx solid #F5F5F5;
	border-bottom: 1rpx solid #F5F5F5;
}
.tab1>text{
	transform: rotateX(180deg);
}


.tabs{
	position: relative;
	padding: 0 20rpx;
}
.tabs1{
	width: 100%;
	height: auto;
	position: absolute;
	top:0;
	left: 0;
	padding-bottom: 20rpx;
	box-shadow: 0 10rpx 10rpx rgba(0,0,0,.1);
  z-index: 999;
}
.tabs1>view{
	height: 70rpx;
	line-height: 70rpx;
	padding-left: 35rpx;
	border-bottom: 1rpx dashed #CCCCCC;
	background: #FFFFFF;
	font-size: 28rpx;
	color: #999999;
}
.tabs2{
	width: 100%;
	height: 100vh;
	position: absolute;
	top:0;
	left: 0;
	/* padding-bottom: 20rpx; */
	background: rgba(0,0,0,.5);
  z-index: 999;
}
.tabs2 .tabs2-1{
	/* display: flex; */
	background: #FFFFFF;
	/* flex-wrap: wrap; */
	float: right;
	width: 550rpx;
	height: 100%;
}
.tabs2 .tabs2-1>.tb2-mj>.mj-s,.tabs2 .tabs2-1>.tb2-zj>.mj-s{
	clear: both;
}
.tabs2 .tabs2-1>.tb2-mj,.tabs2 .tabs2-1>.tb2-zj{
	overflow: hidden;
}
.tabs2 .tabs2-1>.tb2-mj>.mj-s>view{
	float: left;
	padding: 10rpx 20rpx;
	height: 42rpx;
	font-size: 30rpx;
	background: #F5F5F5;
	margin: 8rpx;
}
.tabs2 .tabs2-1>.tb2-zj>.mj-s>view{
	float: left;
	padding: 10rpx 20rpx;
	height: 42rpx;
	font-size: 30rpx;
	background: #F5F5F5;
	margin: 8rpx;
}

.mianji{
	font-size: 30rpx;
	font-weight: bold;
	padding: 15rpx;
	clear: both;
}


.zhao-btm1{
	padding: 20rpx;
